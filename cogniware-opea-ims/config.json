{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "device_id": 0,
    "num_streams": 8,
    "monitoring_interval": 100,
    "enable_tensor_cores": true,
    "enable_mixed_precision": true,
    "optimization_level": 3,
    "max_connections": 1000,
    "request_timeout": 30,
    "enable_cors": true,
    "log_level": "info"
  },
  "compute": {
    "device_id": 0,
    "num_streams": 8,
    "monitoring_interval": 100,
    "enable_tensor_cores": true,
    "enable_mixed_precision": true,
    "optimization_level": 3,
    "max_memory_pool_size": 1073741824,
    "memory_alignment": 256,
    "kernel_launch_timeout": 30000,
    "enable_profiling": true,
    "profiling_buffer_size": 1000
  },
  "logging": {
    "level": "info",
    "file": "logs/msmartcompute.log",
    "max_file_size": 10485760,
    "max_files": 5,
    "enable_console": true,
    "enable_file": true,
    "pattern": "[%Y-%m-%d %H:%M:%S.%e] [%^%l%$] [%t] %v"
  },
  "models": {
    "default_batch_size": 32,
    "default_sequence_length": 512,
    "max_models_in_memory": 10,
    "model_cache_size": 536870912,
    "enable_model_compression": true,
    "compression_algorithm": "quantization"
  },
  "inference": {
    "default_timeout": 30,
    "max_batch_size": 128,
    "max_sequence_length": 2048,
    "enable_batching": true,
    "enable_streaming": true,
    "streaming_chunk_size": 1024,
    "enable_caching": true,
    "cache_size": 268435456
  },
  "training": {
    "default_epochs": 10,
    "default_learning_rate": 0.001,
    "default_batch_size": 32,
    "enable_gradient_accumulation": true,
    "gradient_accumulation_steps": 4,
    "enable_mixed_precision_training": true,
    "enable_gradient_clipping": true,
    "gradient_clip_norm": 1.0,
    "enable_early_stopping": true,
    "early_stopping_patience": 5
  },
  "virtualization": {
    "enable_gpu_virtualization": true,
    "max_virtual_gpus": 8,
    "virtual_gpu_memory_size": 268435456,
    "enable_memory_virtualization": true,
    "enable_compute_virtualization": true,
    "load_balancing_strategy": "least_loaded",
    "scheduling_strategy": "round_robin"
  },
  "monitoring": {
    "enable_metrics_collection": true,
    "metrics_collection_interval": 1000,
    "enable_performance_profiling": true,
    "enable_resource_monitoring": true,
    "enable_health_checks": true,
    "health_check_interval": 5000,
    "enable_alerting": true,
    "alert_thresholds": {
      "gpu_utilization": 0.9,
      "memory_utilization": 0.85,
      "temperature": 80.0,
      "power_usage": 250.0
    }
  },
  "security": {
    "enable_authentication": true,
    "enable_authorization": true,
    "enable_rate_limiting": true,
    "rate_limit_requests_per_minute": 1000,
    "enable_request_logging": true,
    "enable_ssl": false,
    "ssl_cert_file": "",
    "ssl_key_file": ""
  },
  "storage": {
    "model_storage_path": "models/",
    "cache_storage_path": "cache/",
    "log_storage_path": "logs/",
    "temp_storage_path": "temp/",
    "enable_compression": true,
    "compression_level": 6
  },
  "optimization": {
    "enable_kernel_fusion": true,
    "enable_memory_optimization": true,
    "enable_compute_optimization": true,
    "enable_communication_optimization": true,
    "enable_parallel_processing": true,
    "num_worker_threads": 4,
    "enable_dynamic_batching": true,
    "enable_adaptive_scheduling": true
  },
  "api": {
    "enable_rest_api": true,
    "enable_grpc_api": false,
    "enable_graphql_api": false,
    "enable_websocket_api": false,
    "api_version": "v1",
    "enable_api_documentation": true,
    "enable_swagger_ui": true,
    "swagger_ui_path": "/docs"
  },
  "development": {
    "enable_debug_mode": false,
    "enable_trace_logging": false,
    "enable_performance_counters": true,
    "enable_memory_tracking": true,
    "enable_error_reporting": true,
    "enable_crash_dumps": true
  }
} 